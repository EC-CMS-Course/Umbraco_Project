@using Umbraco_Project.ViewModels
@model SupportFormViewModel

@using (Html.BeginUmbracoForm("HandleSupportForm", "Form", FormMethod.Post, new { novalidate = "novalidate", @class = "validate-form" }))
{
    <div class="relative">
        <i class="fa-regular fa-envelope absolute right-4 top-3 text-primary"></i>
        <label asp-for="Email" class="sr-only"></label>
        <input asp-for="Email" type="text" placeholder="@Html.DisplayNameFor(x => x.Email)" 
        class="w-full bg-white-100 p-3 italic text-[0.6125rem] text-[#9C9EA6] lg:text-[0.8125rem] border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
        <span asp-validation-for="Email"></span>
    </div>

    <button type="submit" class="hidden" aria-hidden="true"></button>

}