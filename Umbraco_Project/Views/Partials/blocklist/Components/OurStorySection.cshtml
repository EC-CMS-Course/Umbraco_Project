@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.OurStorySection)Model.Content;
}

<section class="py-16">
    <div class="wrapper flex gap-10">
        <div class="flex flex-col gap-2 w-5/12 ">
            <div>
                @if (content.OurStoryImage != null)
                {
                    <img src="@content.OurStoryImage.Url()" class=" object-cover" />
                }
            </div>
            <p class="text-\[1rem\] italic text-primary">@content.OurStoryImageDescription</p>
        </div>

        <div class="w-7/12 pt-4">
            <div class="rte">@Html.Raw(content.OurStoryText)</div>
        </div>

    </div>
</section>
