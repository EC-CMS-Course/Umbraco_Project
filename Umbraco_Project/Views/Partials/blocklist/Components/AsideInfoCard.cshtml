@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AsideInfoCard)Model.Content;
}

<div class="flex flex-col gap-4">
    <h2 class="text-primary text-[1.375rem] font-semi-bold">@content.AsideInfoCardTitle</h2>
    <img class="w-full h-full object-cover" src="@(content.AsideInfoCardImage?.Url() ?? "~/images/RiskManagement.svg")" alt="Work team" />
    <p class="text-body-text text-[.875rem]">@content.AsideInfoCardText</p>
</div>
